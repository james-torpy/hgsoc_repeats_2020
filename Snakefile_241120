rule htseq:
    input:
        'results/star/GC/{sample}/Aligned.out.bam'
    output:
        'results/htseq/{sample}/counts.gc.custom3.htseq.txt'
    threads: 2
    shell:
        'cd logs; ' + 
        ' ../scripts/map_and_count/3a.htseq_mmap.sh' + 
        ' {wildcards.sample}' +
        ' 2' + # cores
        ' {split} 2> {wildcards.sample}.htseq.errors'



